generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  }

  model Post {
  id        Int     @id @default(autoincrement())
  title     String
  user       User?     @relation(fields: [userId], references: [id])
  userId     Int? @unique
}

  model Address {
  id        Int      @default(autoincrement()) @id
  street    String
  city      String
  country   String
  user      User?
}

model User {
  id            Int         @default(autoincrement()) @id
  email         String      @unique
  name          String
  password      String
  address       Address?     @relation(fields: [addressId], references: [id])
  addressId     Int? @unique
  posts         Post[]
}
