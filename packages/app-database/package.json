    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/config": "^3.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/testing": "^11.1.12",

    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.7",

    "express": "^4.22.1",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
